{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Play",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "mode=play"
            ]
        },
        {
            "name": "Replay",
            "type": "debugpy",
            "request": "launch",
            "program": "src/collect_data.py",
            "console": "integratedTerminal",
            "args": [
                "playback",
                "--episode-file",
                "data/bc_pretraining/1v1_episodes.pkl.gz"
            ]
        },
        {
            "name": "Collect BC",
            "type": "debugpy",
            "request": "launch",
            "program": "src/collect_data.py",
            "console": "integratedTerminal",
            "args": [
                "collect_bc",
                "--config",
                "src/unified_training.yaml"
            ]
        },
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "program": "src/unified_train.py",
            "console": "integratedTerminal",
            "args": [
                "full",
                "--config",
                "src/unified_training.yaml"
            ]
        },
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}